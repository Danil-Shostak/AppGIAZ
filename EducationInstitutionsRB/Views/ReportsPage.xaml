<Page
    x:Class="EducationInstitutionsRB.Views.ReportsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20" Spacing="15">
        <TextBlock Text="Отчеты" FontSize="24" FontWeight="Bold"/>
        <TextBlock Text="Раздел для генерации отчетов"/>
        <ComboBox Header="Масштаб отчета" Width="200">
            <x:String>Страна</x:String>
            <x:String>Область</x:String>
            <x:String>Район</x:String>
        </ComboBox>
        <Button Content="Сгенерировать отчет" Width="200"/>
    </StackPanel>
</Page>